{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@wasm/*": ["builds/emcc/bin/Debug/*"],
      "*": ["@types"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "emscripten", "mocha", "chai", "chai-as-promised", "module-alias"],
  },
  "include": ["src/**/*"],
}
